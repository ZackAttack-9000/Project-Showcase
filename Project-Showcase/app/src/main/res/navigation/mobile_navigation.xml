<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.projectshowcase.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_number_guessing_game"
            app:destination="@id/nav_number_guesser" />
    </fragment>

    <fragment
        android:id="@+id/nav_mad_libs"
        android:name="com.example.projectshowcase.ui.gallery.GalleryFragment"
        android:label="Madlibs"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_scifi"
        android:name="com.example.projectshowcase.ui.slideshow.SlideshowFragment"
        android:label="ScifiNameGenerator"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_number_guesser"
        android:name="com.example.projectshowcase.ui.NumberGuessingGame.NumberGuessingGame"
        tools:layout="@layout/fragment_number_guessing_game"
        android:label="Number Guessing Game"/>
    <fragment
        android:id="@id/nav_credits"
        android:label="Credits"
        android:name="com.example.projectshowcase.ui.Credits.CreditsFragment"
        tools:layout="@layout/fragment_credits"/>



</navigation>